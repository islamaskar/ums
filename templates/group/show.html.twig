{% extends 'base.html.twig' %}

{% block title %}Group{% endblock %}

{% block body %}
    <h1>Group</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ group.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ group.name }}</td>
            </tr>
            <tr>
                <th>Number of users</th>
                <td>{{ group.users.count }}</td>
            </tr>
            {% if group.users.count > 0 %}
            <tr>
                <th>Users</th>
                <td>
                    {% for user in group.users %}
                        <i class="fas fa-user"></i><a href="{{ path('user_show', {'id': user.id})}}"> {{ user.name }} </a>
                    {% endfor %}
                
                </td>
            </tr>
            {% endif %}
            <tr>
                <th>CreatedAt</th>
                <td>{{ group.createdAt ? group.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ group.updatedAt ? group.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <div>
        <a href="{{ path('group_index') }}" class="btn btn-dark"> < Back to list</a>
        <a href="{{ path('group_edit', {'id': group.id}) }}" class="btn btn-primary">Edit</a>
        <a href="#" class="btn btn-danger delete_link">Delete</a>
        {{ include('group/_delete_form.html.twig') }}
    </div>
{% endblock %}
